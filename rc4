import javax.crypto.*;
import java.util.Base64;

public class RC4Demo {
    public static void main(String[] args) throws Exception {
        SecretKey key = KeyGenerator.getInstance("RC4").generateKey();

        Cipher c = Cipher.getInstance("RC4");
        String msg = "HELLO";

        c.init(Cipher.ENCRYPT_MODE, key);
        String enc = Base64.getEncoder().encodeToString(c.doFinal(msg.getBytes()));
        System.out.println("RC4 Encrypted : " + enc);

        c.init(Cipher.DECRYPT_MODE, key);
        System.out.println("RC4 Decrypted : " + new String(c.doFinal(Base64.getDecoder().decode(enc))));
    }
}
